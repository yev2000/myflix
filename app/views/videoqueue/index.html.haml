%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @videos.each do |video|
              - queue_entry = VideoQueueEntry.find_by(video_id: video.id, user_id: @user.id)
              - video_review = Review.find_by(video_id: video.id, user_id: @user.id)
              - rating_string = video_review ? video_review.rating_string : "Not rated"
              = render "queue_entry", video: video, index_value: queue_entry.position, rating_string: rating_string
