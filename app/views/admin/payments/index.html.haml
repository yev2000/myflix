%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="") Recent Payments
            %li= link_to "Add a New Video", new_admin_video_path
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.each do |payment|
                %tr
                  %td= payment.user.fullname
                  %td= payment.user.email
                  -# This is a candidate for a decorator to print out the amount in a pretty way
                  %td= payment.decorate.charge_amount_string
                  %td= payment.reference_id
