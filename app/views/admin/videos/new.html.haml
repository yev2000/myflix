%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_ids, Category.all.each.collect { |c| [c.name, c.id] }, { label: "Categories", selected: @video.categories.map(&:id) }, {multiple: true, size: 4 }
            = f.text_area :description, rows: 8
            = image_tag(@video.cover_url(:thumb)) if @video.cover?
            = f.file_field(:cover, label: "Cover", accept: 'image/png,image/gif,image/jpeg')
            = f.submit "Add Video", class: "btn btn-default"
