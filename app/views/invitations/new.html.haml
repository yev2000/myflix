%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      -# layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6"
      = bootstrap_form_for(@invitation) do |f|
        = f.alert_message "Please fix the errors below."
        %header
          %h1 Invite a friend to join MyFlix!
        = f.text_field :fullname, label: "Friend's Name"
        = f.email_field :email, label: "Friend's Email Address"
        = f.text_area :message, label: "Invitation Message"
        = f.submit "Send Invitation", class: "btn btn-primary"
