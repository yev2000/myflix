%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX"
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag(search_videos_path, :method => "get", class: "span5 for-search") do
      - if params[:title_string]
        = text_field_tag(:title_string, params[:title_string], {class: "input search-query"})
      - else
        = text_field_tag(:title_string, nil, {class: "search-query", placeholder: "Search for videos here"})
      %button.btn(type="submit") Search

    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{current_user_get.fullname}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a{href: edit_user_path(current_user_get)} Account
              %a(href="#") Plan and Billing
              %a{href: logout_path} Sign Out

